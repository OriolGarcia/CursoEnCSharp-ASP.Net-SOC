@using _20221118_NeptunoMVC.Dal
@{
	ViewData["Title"] = "Ficha de cliente";
}

<div class="row">
	<div class="col-md-6">
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"><b>Empresa:</b> </label>
			<div class="col-sm-9 m-auto"> @Model.CompanyName</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"> <b>Contacto:</b></label>
			<div class="col-sm-9 m-auto"> @Model.ContactName</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"> <b>Cargo:</b></label>
			<div class="col-sm-9 m-auto"> @Model.ContactTitle</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"> <b>Telefono:</b></label>
			<div class="col-sm-9 m-auto"> @Model.Phone</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"> <b>Pais:</b></label>
			<div class="col-sm-9 m-auto"> @Model.Country</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-3 col-form-label"></label>
			<div class="col-sm-9 m-auto"> 
				<a href="/Products/Index" role="button" class="btn btn-primary">Volver a productos</a>
			</div>
		</div>

	</div>
</div>